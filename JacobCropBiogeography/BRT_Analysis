data.frame.dist <- cbind(
		as.vector(gendistance),
		as.vector(resistance.distance),
		as.vector(divergence.time),
		as.vector(hitting.time.centrality.diff.unw),
		as.vector(hitting.time.centrality.diff.w),
		as.vector(hitting.time.centrality.overlap.unw),
		as.vector(hitting.time.centrality.overlap.w),
		as.vector(joint.trajectory.unw),
		as.vector(joint.trajectory.w))

first.try.gbm <- gbm.step(
		data=data.frame.dist, 
		gbm.x=2:4, 
		gbm.y=1,
		family = "gaussian", 
		tree.complexity=5,
		learning.rate=0.1,
		bag.fraction=0.5)
